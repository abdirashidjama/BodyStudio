<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abdirashidjama.bodystudio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What's new  ..."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.127"
        app:layout_constraintHorizontal_bias="0.435"
        android:id="@+id/textView3" />

    <Button
        android:id="@+id/trainingb"
        android:layout_width="211dp"
        android:layout_height="52dp"
        android:text="Weight training"
        android:layout_marginLeft="75dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="logWorkOut"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="132dp" />

    <Button
        android:id="@+id/Jo"
        android:layout_width="218dp"
        android:layout_height="53dp"
        android:text="Journal"
        android:layout_marginLeft="75dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@+id/historyb"
        android:onClick="journal"/>

    <Button
        android:id="@+id/historyb"
        android:layout_width="218dp"
        android:layout_height="49dp"
        android:text="Training History"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toBottomOf="@+id/trainingb"
        android:layout_marginLeft="75dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="history"/>

</android.support.constraint.ConstraintLayout>
